<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/odeme_ekrani"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_hideable="true"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <View
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/parkxlab_button" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/parkxlab_button"
            android:text="ÖDEME YAP"
            android:textColor="@android:color/background_light"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/purchase_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-30dp"
            android:text="Ödeme Detayları"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="22dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGrey" />

        <EditText
            android:id="@+id/credit_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/parkxlab_edittext"
            android:hint="Kredi veya banka kartı ekle"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColorHint="@android:color/black"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/card"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="-29dp"/>

        <EditText
            android:id="@+id/mobile_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/parkxlab_edittext"
            android:hint="Cep Cüzdan mobil ödeme"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColorHint="@android:color/black"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/base_station"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="-28dp"/>

        <EditText
            android:id="@+id/code_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/parkxlab_edittext"
            android:hint="Kodu kullan"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColorHint="@android:color/black"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/code_image"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="-28dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorGrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="1 Saatlik Otopark Ücreti:"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="20dp"
            android:text="8,50tl"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textAlignment="textEnd"
            tools:ignore="RtlCompat" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorGrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Rezervasyon Bedeli:"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:text="0,75tl"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textAlignment="textEnd"
            tools:ignore="RtlCompat" />

    </LinearLayout>
</LinearLayout>