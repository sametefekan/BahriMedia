<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewPostActivity"
    android:orientation="vertical"
    android:layout_alignParentStart="true"
    android:layout_marginTop="180dp"
    android:paddingTop="10dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:background="#8CC1F3">

    <TextView
        android:id="@+id/purchase_text"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/colorGrey"
        android:text="ÖDEME EKRANI"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="26dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/credit_text"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/credit_card"
        android:hint="Kredi veya banka kartı ekle"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="14dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/mobile_text"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/gsm"
        android:hint="Cep Cüzdan mobil ödeme"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="14dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/code_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/code"
        android:hint="Kodu kullan"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="14dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/purchase_details"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorGrey"
        android:text="ÖDEME DETAYLARI"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="26dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="1 Saatlik otopark ücreti:"
        android:textColor="@color/colorBlack"
        android:textStyle="normal"
        android:textSize="14dp" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="8,50tl"
        android:layout_gravity="right"
        android:layout_marginTop="-46dp"
        tools:ignore="RtlCompat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Rezervasyon Bedeli:"
        android:textColor="@color/colorBlack"
        android:textStyle="normal"
        android:textSize="14dp" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="0,75tl"
        android:layout_gravity="right"
        android:layout_marginTop="-46dp"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:background="@drawable/fungover_button"
        android:text="Ödeme Yap"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage" />

</LinearLayout>