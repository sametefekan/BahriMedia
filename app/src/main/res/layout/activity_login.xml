<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    tools:context="com.bahricorp.stumarkt.Activity.LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="160dp">

        <EditText
            android:layout_margin="15dp"
            android:background="@drawable/fungover_edittext"
            android:textStyle="normal"
            android:inputType="textEmailAddress"
            android:hint="Geben sie ihre E-Mail Adresse ein"
            android:id="@+id/editTextEmail"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            tools:ignore="HardcodedText"
            android:drawableStart="@drawable/ic_email_black_24dp" />

        <EditText
            android:background="@drawable/fungover_edittext"
            android:layout_margin="15dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:textStyle="normal"
            android:textAlignment="center"
            android:hint="Geben Sie Ihr Passwort ein"
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/fungover_password"
            tools:ignore="HardcodedText"
            android:drawableStart="@drawable/fungover_password" />

        <Button
            android:id="@+id/buttonSignIn"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/fungover_button"
            android:text="EINREICHEN"
            tools:ignore="HardcodedText,SpUsage" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:text="Anmelden"
            android:textStyle="bold"
            android:textColor="@color/colorOrange"
            android:textSize="25sp"
            android:id="@+id/textViewSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="Einloggen"
        android:textColor="@color/colorOrange"
        android:textSize="38dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage" />

    <ImageView
        android:id="@+id/ivLogoSignIn"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="40dp"
        app:srcCompat="@drawable/stumarkt_logo"
        tools:ignore="ContentDescription,NewApi" />

</RelativeLayout>
